cd /var/www/html/framework2
rm -rf /tmp/framework2
git archive --prefix framework2/ HEAD | tar -x -C /tmp

# compress
echo "Compressing..."
cd /tmp
tar -zcf framework2.tar.gz framework2

# copy to server
echo "Copying to server..."
scp /tmp/framework2.tar.gz ec2-user@23.23.144.16:~

# deploy to staging
echo "Moving the new stuff remotely..."
ssh ec2-user@23.23.144.16 'cd ~ && tar -xvf ~/framework2.tar.gz && sudo rm -rf /var/www/html/framework2.old && sudo mv /var/www/html/framework2 /var/www/html/framework2.old && sudo mv ~/framework2 /var/www/html/framework2'